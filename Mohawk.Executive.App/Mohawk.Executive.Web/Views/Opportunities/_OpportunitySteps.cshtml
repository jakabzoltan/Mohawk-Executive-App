
@model IEnumerable<Mohawk.Executive.Services.ViewModels.OpportunityStepModel>

@if (Model.Any())
{
    foreach (var item in Model.OrderBy(x => x.StepOrder))
    {
        <div class="row block-card">
            <div class="col-md-12">
                <div style="display: inline-block;">
                    <h4>@item.StepOrder</h4>
                </div>
                <div style="display: inline-block; padding-left: 1em;">
                    @item.Step
                </div>
                <div class="pull-right" style="display: inline-block;">
                    <button class="btn btn-default" onclick="window.location='@Url.Action("ReorderStep", new { stepId = item.Id, direction = "up", opportunityId = item.OpportunityId})'"><span class="glyphicon glyphicon-arrow-up"></span></button>
                    <button class="btn btn-default" onclick="window.location='@Url.Action("ReorderStep", new { stepId = item.Id, direction = "down", opportunityId = item.OpportunityId})'"><span class="glyphicon glyphicon-arrow-down"></span></button>
                    <button class="btn btn-success" onclick="window.location='@Url.Action("RemoveStep", new { stepId = item.Id, opportunityId = item.OpportunityId})'"><span class="glyphicon glyphicon-check"></span></button>
                    <button class="btn btn-danger" onclick="window.location='@Url.Action("RemoveStep", new { stepId = item.Id, opportunityId = item.OpportunityId})'">&times;</button>
                </div>
            </div>


        </div>
    }

}
else
{
    <div>This opportunity has no steps to achieve at the moment. Add one!</div>
}
