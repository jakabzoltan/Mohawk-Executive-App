@model Mohawk.Executive.Services.ViewModels.Opportunity
@{
    ViewBag.Title = "CreateOpportunity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <h2>
            Create Contact
        </h2>
    </div>
</div>
<hr />

<div class="row">
    @using (Html.BeginForm("AddContact", "Contact", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-sm-12">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">@Html.LabelFor(m => m.OpportunitySubject)*</div>
            <div class="col-sm-12">
                @Html.TextBoxFor(m => m.OpportunitySubject, new { @class = "form-control modified-input" })
                @Html.ValidationMessageFor(m => m.OpportunitySubject, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-sm-12">@Html.LabelFor(m => m.Value)</div>
            <div class="col-sm-12">
                @Html.TextBoxFor(m => m.Value, new { @class = "form-control modified-input" })
                @Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
                <div class="col-sm-12">@Html.LabelFor(m => m.OpportunityPriorityId)</div>
                <div class="col-sm-12">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control modified-input" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>*@

        <div class="form-group text-center" style="margin-top: 100px;">
            <div class="col-xs-12">
                <input type="submit" value="Submit" class="btn btn-success" style="width: 100%;" />
            </div>
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>