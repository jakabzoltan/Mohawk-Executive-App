@model Mohawk.Executive.Web.Models.AddDonationViewModel

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Add Donation</h5>
</div>
@using (Html.BeginForm("AddDonation", "Opportunities", FormMethod.Post))
{
    <div class="modal-body row">
        <div class="form-group">
            @Html.HiddenFor(m => m.OpportunityId)
            <div class="col-sm-12">
                @Html.LabelFor(m => m.DonationText)
                <br />
                <small>Add a donation such as "$10,000" or "100 Cars"</small>
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.DonationText, new { @class = "form-control", autocomplete = "off" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                @Html.LabelFor(m => m.DonationTypes)
                <br />
                <small>The type of donation. These can be custom created in the settings of the application</small>
            </div>
            <div class="col-md-12">
                @Html.ListBoxFor(m => m.Selected, Model.DonationList, new { @class = "selectpicker form-control", id = "donation-types" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-success" value="Add" />
    </div>

}
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker({
            size: 5
        });
    })
</script>