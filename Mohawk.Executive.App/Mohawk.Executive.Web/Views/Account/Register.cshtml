@model Mohawk.Executive.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control modified-input" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-12" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control modified-input" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control modified-input" })
        </div>
    </div>
    <div class="form-group" style="margin-top:50px;">
        <div class="col-xs-12">
            <input type="submit" value="Register" class="btn btn-default" style="width: 100%;" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
